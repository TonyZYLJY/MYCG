<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_toStartOf="@+id/editText"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <Button
      android:id="@+id/plusSignButton"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="8dp"
      android:background="@mipmap/plussign"
      android:focusable="false"
      app:layout_constraintStart_toEndOf="@+id/quantityVH"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sizeVH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignTop="@+id/editText"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDescription" />

   <TextView
      android:id="@+id/quantityVH"
      android:layout_width="25dp"
      android:layout_height="20dp"
      android:layout_alignEnd="@+id/editText"
      android:layout_alignTop="@+id/editText"
      android:layout_marginTop="8dp"
      android:text="00"
      android:textAlignment="center"
      app:layout_constraintStart_toEndOf="@+id/minusSignButton"
      app:layout_constraintTop_toTopOf="parent" />

   <Button
      android:id="@+id/minusSignButton"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginStart="208dp"
      android:layout_marginTop="8dp"
      android:background="@mipmap/minussign"
      android:focusable="false"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/priceVH"
      android:layout_width="77dp"
      android:layout_height="21dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/textView4"
      app:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/textView4"
      android:layout_width="15dp"
      android:layout_height="19dp"
      android:layout_marginStart="280dp"
      android:layout_marginTop="8dp"
      android:text="$"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>