<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/drawer_layout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fitsSystemWindows="true"
   tools:context="com.example.a125688.americano.fulfillOrder"
   tools:openDrawer="start">

   <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@mipmap/grounds">

         <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/commonColor"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
                 <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@color/commonColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

         <EditText
            android:id="@+id/printedName"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="84dp"
            android:maxLines="1"
            android:maxLength="15"
            android:ellipsize="end"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="96dp"
            android:text="Name on Cup"
            android:textColor="@color/commonColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <ImageButton
            android:id="@+id/minusCup"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="164dp"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@mipmap/minussign"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

         <ImageButton
            android:id="@+id/plusCup"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="164dp"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@mipmap/plussign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.211"
            app:layout_constraintStart_toEndOf="@+id/quantityCup"
            app:layout_constraintTop_toTopOf="parent" />

         <Button
            android:id="@+id/completeBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="508dp"
            android:text="Complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/quantityCup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="164dp"
            android:text="0"
            android:textColor="@color/commonColor"
            android:textColorLink="@color/commonColor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/minusCup"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/textView6"
            android:layout_width="79dp"
            android:layout_height="35dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="164dp"
            android:text="Extra cup"
            android:textColor="@color/commonColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="216dp"
            android:text="Comments"
            android:textColor="@color/commonColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/editText7"
            android:layout_width="310dp"
            android:layout_height="219dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            android:maxLines="5"
            android:maxLength="100"
            android:ellipsize="end"
            android:inputType="textMultiLine"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

      </android.support.constraint.ConstraintLayout>
   </FrameLayout>

   <android.support.design.widget.NavigationView
      android:id="@+id/nav_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:fitsSystemWindows="true"
      app:headerLayout="@layout/nav_header_main"
      app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>
