<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/drawer_layout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:fitsSystemWindows="true"
   tools:context="com.example.a125688.americano.CartPage"
   tools:openDrawer="start">

   <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@mipmap/grounds">

         <EditText
            android:id="@+id/exYear"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_marginStart="296dp"
            android:layout_marginTop="276dp"
            android:autoSizeMaxTextSize="2dp"
            android:inputType="number"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText6"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="276dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Expiration Year"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText5"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="224dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Expiration Month"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/secCode"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="172dp"
            android:autoSizeMaxTextSize="3dp"
            android:background="@drawable/emptytxtbox"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText4"
            android:layout_width="145dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="172dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Security Code"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText3"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="72dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Billing Details"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/cardNumber"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="120dp"
            android:autoSizeMaxTextSize="16dp"
            android:background="@drawable/emptytxtbox"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/commonColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

         <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/commonColor"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

         <TextView
            android:id="@+id/editText2"
            android:layout_width="131dp"
            android:layout_height="27dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="120dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Card Number"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/exMonth"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginStart="308dp"
            android:layout_marginTop="228dp"
            android:autoSizeMaxTextSize="2dp"
            android:inputType="number"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <Button
            android:id="@+id/validateBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="516dp"
            android:text="Validate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText7"
            android:layout_width="208dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="324dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Billing Address"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/address"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="364dp"
            android:autoSizeMaxTextSize="30dp"
            android:background="@drawable/emptytxtbox"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText8"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="364dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Address"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText9"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="404dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="State"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/state"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_marginStart="296dp"
            android:layout_marginTop="404dp"
            android:autoSizeMaxTextSize="2dp"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <TextView
            android:id="@+id/editText11"
            android:layout_width="164dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="444dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Zip Code"
            android:textColor="@color/commonColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <EditText
            android:id="@+id/zipcode"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_marginStart="296dp"
            android:layout_marginTop="452dp"
            android:autoSizeMaxTextSize="5dp"
            android:background="@drawable/emptytxtbox"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

      </android.support.constraint.ConstraintLayout>
   </FrameLayout>

  <android.support.design.widget.NavigationView
      android:id="@+id/nav_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:fitsSystemWindows="true"
      app:headerLayout="@layout/nav_header_main"
      app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>